<div class="row">
  <h1> <%= t('.header') %> </h1>
  <p> <%= link_to t('.new_test'), new_admin_test_path %> </p>

  <%= render 'shared/errors', resource: @test %>
  <table class="table table-hover" >
    <tr>
      <th class="sort-by-title pointer">
          <%= t('tests.index.heading.name_test') %> 
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t('tests.index.heading.number_questions') %></th>
      <th><%= t('tests.index.heading.actions') %></th>
    </tr>
    <%= render @tests %>
  </table>
</div>
